# API Configuration
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8000
FASTAPI_ENV=development
DEBUG=true

# Model Configuration
MODEL_NAME=qwen2.5-coder:7b-q4_k_m
MODEL_PATH=/models
NUM_CTX=4096
NUM_GPU_LAYERS=40
TEMPERATURE=0.2
TOP_P=0.9
TOP_K=40
REPEAT_PENALTY=1.05
MAX_TOKENS=256

# Device Configuration
DEVICE_MAP=auto
OFFLOAD_FOLDER=/tmp/offload
USE_FLASH_ATTENTION_2=true
LOAD_IN_4BIT=true

# Cache Configuration
CACHE_ENABLED=true
CACHE_BACKEND=redis
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Security
API_KEY=your-secret-api-key-here
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:5173"]

# Storage
HISTORY_DIR=/tmp/colab-ai-coder/history
PROMPT_TEMPLATES_DIR=/tmp/colab-ai-coder/templates

# Sentry (Optional)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
